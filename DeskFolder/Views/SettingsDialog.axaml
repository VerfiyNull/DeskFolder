<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DeskFolder.Views.SettingsDialog"
        Title="Settings"
        Width="720" Height="620"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="None"
        ShowInTaskbar="False">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="SelectionBrush" Value="#6C63FF66"/>
            <Setter Property="Background" Value="#1E1E22"/>
            <Setter Property="BorderBrush" Value="#2F2F36"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#1E1E22"/>
            <Setter Property="BorderBrush" Value="#2F2F36"/>
        </Style>
        <Style Selector="NumericUpDown TextBox">
            <Setter Property="SelectionBrush" Value="#6C63FF66"/>
            <Setter Property="CaretBrush" Value="#6C63FF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        <Style Selector="NumericUpDown TextBox:focus">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        <Style Selector="NumericUpDown:focus">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="NumericUpDown:pointerover">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="NumericUpDown /template/ Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="NumericUpDown /template/ Border:focus">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="NumericUpDown /template/ TextBox">
            <Setter Property="SelectionBrush" Value="#6C63FF66"/>
            <Setter Property="CaretBrush" Value="#6C63FF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        <Style Selector="NumericUpDown /template/ TextBox:focus">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        <Style Selector="NumericUpDown /template/ TextBox:pointerover">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="ShowButtonSpinner" Value="False"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                        <Grid>
                            <TextBox x:Name="PART_TextBox"
                                     Text="{TemplateBinding Text}"
                                     TextAlignment="{TemplateBinding TextAlignment}"
                                     Watermark="{TemplateBinding Watermark}"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"
                                     Foreground="{TemplateBinding Foreground}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionBrush="#6C63FF66"
                                     CaretBrush="#6C63FF"
                                     FocusAdorner="{x:Null}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="NumericUpDown /template/ TextBox">
            <Setter Property="SelectionBrush" Value="#6C63FF66"/>
            <Setter Property="CaretBrush" Value="#6C63FF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        <Style Selector="NumericUpDown /template/ TextBox:focus">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Styles>

    <Border Name="ContentBorder"
                Background="#1B1B21"
                CornerRadius="18"
                BorderBrush="#2C2C33"
                BorderThickness="1"
                Margin="14"
                Padding="32">
            <Grid RowDefinitions="Auto,*">
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,12" PointerPressed="TitleBar_PointerPressed" Cursor="Hand">
                <Border Width="40" Height="40" CornerRadius="12" Background="#6C63FF" Margin="0,0,12,0">
                    <TextBlock Text="⚙️" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="Settings" FontSize="22" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <TextBlock Text="Make DeskFolder feel just right"
                               FontSize="12" Foreground="#9A9AA8"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Name="CancelButton" Content="Cancel"
                            Click="CancelButton_Click"
                            Background="#2F2F36" Foreground="#D0D0D6"
                            Padding="14,10" CornerRadius="10"
                            BorderThickness="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Width="110"/>
                    <Button Name="SaveButton" Content="Save Changes"
                            Click="SaveButton_Click"
                            Background="#6C63FF" Foreground="White"
                            Padding="14,10" CornerRadius="10"
                            BorderThickness="0" FontWeight="SemiBold"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Width="150"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" Margin="0,0,0,0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="16">
                    <Border Background="#22222A" CornerRadius="12" Padding="24,18,24,18" BorderBrush="#2F2F36" BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Behavior" FontSize="12" FontWeight="SemiBold" Foreground="#9FA0AD"/>
                            <StackPanel Spacing="6">
                                <CheckBox Name="AutoLaunchToggle"
                                          Content="Launch on Windows startup"
                                          Foreground="#FFFFFF" FontSize="13"/>
                                <TextBlock Text="Start DeskFolder automatically after you sign in." FontSize="11" Foreground="#8E8E9B" Margin="22,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#22222A" CornerRadius="12" Padding="24,18,24,18" BorderBrush="#2F2F36" BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Appearance" FontSize="12" FontWeight="SemiBold" Foreground="#9FA0AD"/>
                            
                            <StackPanel Spacing="6">
                                <CheckBox Name="HoverBorderToggle"
                                          Content="Show hover border on files/folders"
                                          Foreground="#FFFFFF" FontSize="13"/>
                                <TextBlock Text="Display a colored border when hovering over items." FontSize="11" Foreground="#8E8E9B" Margin="22,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Spacing="6">
                                <CheckBox Name="AcrylicToggle"
                                          Content="Enable acrylic background effect"
                                          Foreground="#FFFFFF" FontSize="13"/>
                                <TextBlock Text="Use translucent blur effect for folder backgrounds (Windows 10+)." FontSize="11" Foreground="#8E8E9B" Margin="22,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#22222A" CornerRadius="12" Padding="24,18,24,18" BorderBrush="#2F2F36" BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Keyboard Shortcuts" FontSize="12" FontWeight="SemiBold" Foreground="#9FA0AD"/>
                            <TextBlock Text="Click a shortcut to record new keys" FontSize="11" Foreground="#8E8E9B"/>
                            <StackPanel Name="KeybindStack" Spacing="8"/>
                        </StackPanel>
                    </Border>

                     <Border Background="#22222A" CornerRadius="12" Padding="32" BorderBrush="#2F2F36" BorderThickness="1">
                        <StackPanel Spacing="16" HorizontalAlignment="Center">
                            <TextBlock Text="Credits" FontSize="14" FontWeight="SemiBold" Foreground="#9FA0AD" HorizontalAlignment="Center"/>
                            
                            <StackPanel Spacing="6" HorizontalAlignment="Center">
                                <TextBlock Text="DeskFolder" FontWeight="Bold" FontSize="18" Foreground="#FFFFFF" HorizontalAlignment="Center"/>
                                <Border Background="#6C63FF" Height="2" Width="24" HorizontalAlignment="Center" CornerRadius="1" Margin="0,2"/>
                                <TextBlock Text="v2.1.0" Foreground="#6C63FF" FontSize="12" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Spacing="4" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock Text="Created by" Foreground="#8E8E9B" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="KAI ₦UŁŁ" Foreground="#FFFFFF" FontSize="16" FontWeight="ExtraBold" HorizontalAlignment="Center" LetterSpacing="1"/>
                                <TextBlock Text="Licensed under Custom License" Foreground="#5E5E6B" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

        </Grid>
        </Border>
</Window>
