<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DeskFolder.Views.FolderEditDialog"
        Width="900" Height="700"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="None"
        ShowInTaskbar="False"
        Title=""
        UseLayoutRounding="True">
    
    <Window.Styles>
        <Style Selector="CheckBox">
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
        </Style>
        <Style Selector="Slider">
            <Setter Property="Foreground" Value="#6C63FF"/>
            <Setter Property="Background" Value="#3F3F46"/>
        </Style>
        
        <!-- Base Card Style (Border) -->
        <Style Selector="Border.setting-card">
            <Setter Property="Background" Value="#25252A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <!-- Base Card Style (ToggleButton) -->
        <Style Selector="ToggleButton.setting-card">
            <Setter Property="Background" Value="#25252A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Name="CardBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ToggleButton Hover Effect Only -->
        <Style Selector="ToggleButton.setting-card:pointerover /template/ Border#CardBorder">
            <Setter Property="Background" Value="#2A2A30"/>
        </Style>
        
        <!-- Border Style (Static, no hover) -->
        <Style Selector="Border.setting-card">
             <!-- Properties inherited/set by Control selector above, but explicit here if needed for transitions -->
        </Style>

        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
        </Style>
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#9A9AA8"/>
        </Style>
    </Window.Styles>

    <Border Name="ContentBorder"
            Background="#1B1B21"
            CornerRadius="16"
            BorderBrush="#2C2C33"
            BorderThickness="1"
            Margin="0"
            ClipToBounds="True">
        <Grid RowDefinitions="Auto,*,Auto">
            
            <!-- Header -->
            <Border Grid.Row="0" Padding="24,16" BorderBrush="#2C2C33" BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                        <TextBlock Text="Edit Folder" FontSize="18" FontWeight="SemiBold" Foreground="White" RenderOptions.TextRenderingMode="Antialias"/>
                        <TextBlock Text="â€”" Foreground="#555"/>
                        <TextBlock Name="FolderNameText" Text="Folder Name" FontSize="16" Foreground="#999" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="ESC to close" FontSize="11" Foreground="#555" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" Padding="24,24,24,140">
                <StackPanel Spacing="16">
                    
                    <!-- Toggles Grid (3x2) -->
                    <Grid ColumnDefinitions="*,12,*" RowDefinitions="Auto,12,Auto,12,Auto">
                        
                        <!-- Lock -->
                        <ToggleButton Name="LockToggle" Grid.Row="0" Grid.Column="0" Classes="setting-card" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Column="0" Text="ðŸ”’" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Classes="h1" Text="Lock Folder"/>
                                    <TextBlock Classes="h2" Text="Prevent moving and editing"/>
                                </StackPanel>
                                <CheckBox IsChecked="{Binding $parent[ToggleButton].IsChecked, Mode=OneWay}" IsHitTestVisible="False" Grid.Column="2"/>
                            </Grid>
                        </ToggleButton>

                        <!-- Always On Top -->
                        <ToggleButton Name="TopmostToggle" Grid.Row="0" Grid.Column="2" Classes="setting-card" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Column="0" Text="ðŸ“Œ" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Classes="h1" Text="Always on Top"/>
                                    <TextBlock Classes="h2" Text="Keep window above others"/>
                                </StackPanel>
                                <CheckBox IsChecked="{Binding $parent[ToggleButton].IsChecked, Mode=OneWay}" IsHitTestVisible="False" Grid.Column="2"/>
                            </Grid>
                        </ToggleButton>

                        <!-- Show Border -->
                        <ToggleButton Name="BorderToggle" Grid.Row="2" Grid.Column="0" Classes="setting-card" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Column="0" Text="ðŸ–¼ï¸" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Classes="h1" Text="Show Border"/>
                                    <TextBlock Classes="h2" Text="Display window outline"/>
                                </StackPanel>
                                <CheckBox IsChecked="{Binding $parent[ToggleButton].IsChecked, Mode=OneWay}" IsHitTestVisible="False" Grid.Column="2"/>
                            </Grid>
                        </ToggleButton>

                        <!-- Snap to Grid -->
                        <ToggleButton Name="GridToggle" Grid.Row="2" Grid.Column="2" Classes="setting-card" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Column="0" Text="ðŸ“" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Classes="h1" Text="Snap to Grid"/>
                                    <TextBlock Classes="h2" Text="Align items to grid"/>
                                </StackPanel>
                                <CheckBox IsChecked="{Binding $parent[ToggleButton].IsChecked, Mode=OneWay}" IsHitTestVisible="False" Grid.Column="2"/>
                            </Grid>
                        </ToggleButton>

                        <!-- Show File Names -->
                        <ToggleButton Name="FileNamesToggle" Grid.Row="4" Grid.Column="0" Classes="setting-card" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Column="0" Text="ðŸ“" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Classes="h1" Text="Show File Names"/>
                                    <TextBlock Classes="h2" Text="Display text below icons"/>
                                </StackPanel>
                                <CheckBox IsChecked="{Binding $parent[ToggleButton].IsChecked, Mode=OneWay}" IsHitTestVisible="False" Grid.Column="2"/>
                            </Grid>
                        </ToggleButton>

                        <!-- Show Window Title -->
                        <ToggleButton Name="WindowTitleToggle" Grid.Row="4" Grid.Column="2" Classes="setting-card" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Column="0" Text="ðŸ·ï¸" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Classes="h1" Text="Window Title"/>
                                    <TextBlock Classes="h2" Text="Show folder name bar"/>
                                </StackPanel>
                                <CheckBox IsChecked="{Binding $parent[ToggleButton].IsChecked, Mode=OneWay}" IsHitTestVisible="False" Grid.Column="2"/>
                            </Grid>
                        </ToggleButton>
                    </Grid>

                    <!-- Sliders Section (Opacity / Icon Size) -->
                    <Grid ColumnDefinitions="*,12,*">
                        <!-- Opacity -->
                        <Border Grid.Column="0" Classes="setting-card">
                            <StackPanel Spacing="8">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Classes="h1" Text="Background Opacity"/>
                                    <TextBlock Name="OpacityValue" Grid.Column="1" Text="100%" FontSize="12" Foreground="#D0D0D6"/>
                                </Grid>
                                <Slider Name="OpacitySlider" Minimum="0.0" Maximum="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            </StackPanel>
                        </Border>

                        <!-- Icon Size -->
                        <Border Grid.Column="2" Classes="setting-card">
                            <StackPanel Spacing="8">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Classes="h1" Text="Icon Size"/>
                                    <TextBlock Name="IconSizeValue" Grid.Column="1" Text="64 px" FontSize="12" Foreground="#D0D0D6"/>
                                </Grid>
                                <Slider Name="IconSizeSlider" Minimum="32" Maximum="128" TickFrequency="8" IsSnapToTickEnabled="True"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Colors -->
                    <Border Classes="setting-card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="h1" Text="Color Theme"/>
                            <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,16,Auto">
                                <!-- Border Color -->
                                <Border Grid.Row="0" Grid.Column="0" Background="#2F2F36" CornerRadius="8" Padding="12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Name="BorderColorPreview" Width="36" Height="36" CornerRadius="6" BorderBrush="#444" BorderThickness="1" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Window Border" FontSize="13" Foreground="#F0F0F0"/>
                                            <TextBlock Name="BorderColorValue" Text="#HEX" FontSize="11" Foreground="#888"/>
                                        </StackPanel>
                                        <Button Name="BorderColorButton" Grid.Column="2" Content="Change" 
                                                Background="#3F3F46" Foreground="#DDD" FontSize="11" Padding="10,6" CornerRadius="6" Cursor="Hand"/>
                                    </Grid>
                                </Border>

                                <!-- Background Color -->
                                <Border Grid.Row="0" Grid.Column="2" Background="#2F2F36" CornerRadius="8" Padding="12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Name="WindowBgColorPreview" Width="36" Height="36" CornerRadius="6" BorderBrush="#444" BorderThickness="1" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Background" FontSize="13" Foreground="#F0F0F0"/>
                                            <TextBlock Name="WindowBgColorValue" Text="#HEX" FontSize="11" Foreground="#888"/>
                                        </StackPanel>
                                        <Button Name="WindowBgColorButton" Grid.Column="2" Content="Change" 
                                                Background="#3F3F46" Foreground="#DDD" FontSize="11" Padding="10,6" CornerRadius="6" Cursor="Hand"/>
                                    </Grid>
                                </Border>

                                <!-- Title Text Color -->
                                <Border Grid.Row="2" Grid.Column="0" Background="#2F2F36" CornerRadius="8" Padding="12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Name="TitleTextColorPreview" Width="36" Height="36" CornerRadius="6" BorderBrush="#444" BorderThickness="1" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Title Text" FontSize="13" Foreground="#F0F0F0"/>
                                            <TextBlock Name="TitleTextColorValue" Text="#HEX" FontSize="11" Foreground="#888"/>
                                        </StackPanel>
                                        <Button Name="TitleTextColorButton" Grid.Column="2" Content="Change" 
                                                Background="#3F3F46" Foreground="#DDD" FontSize="11" Padding="10,6" CornerRadius="6" Cursor="Hand"/>
                                    </Grid>
                                </Border>

                                <!-- Title Bar Background -->
                                <Border Grid.Row="2" Grid.Column="2" Background="#2F2F36" CornerRadius="8" Padding="12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Name="TitleBarBgColorPreview" Width="36" Height="36" CornerRadius="6" BorderBrush="#444" BorderThickness="1" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Title Bar" FontSize="13" Foreground="#F0F0F0"/>
                                            <TextBlock Name="TitleBarBgColorValue" Text="#HEX" FontSize="11" Foreground="#888"/>
                                        </StackPanel>
                                        <Button Name="TitleBarBgColorButton" Grid.Column="2" Content="Change" 
                                                Background="#3F3F46" Foreground="#DDD" FontSize="11" Padding="10,6" CornerRadius="6" Cursor="Hand"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#1F1F24" Padding="20,10" Margin="0,0,0,0" BorderBrush="#2C2C33" BorderThickness="0,1,0,0">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Button Name="ResetButton" Click="ResetButton_Click" Content="Reset Default" Foreground="#888" Background="Transparent" BorderThickness="0" FontSize="11" Cursor="Hand"/>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <Button Name="CancelButton" Click="CancelButton_Click" Content="Cancel" 
                                Width="72" Height="26" FontSize="12"
                                Background="#2F2F36" Foreground="#DDD" 
                                CornerRadius="6" BorderThickness="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                Cursor="Hand"/>
                        <Button Name="SaveButton" Click="SaveButton_Click" Content="Save" 
                                Width="72" Height="26" FontSize="12"
                                Background="#6C63FF" Foreground="#FFF" 
                                FontWeight="SemiBold"
                                CornerRadius="6" BorderThickness="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
