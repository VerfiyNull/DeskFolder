<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DeskFolder.Views.ColorPickerDialog"
        Title="Pick a Color"
        Width="720" Height="450"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="None"
        ShowInTaskbar="False">

    <Border Background="#1B1B21"
            CornerRadius="16"
            BorderBrush="#2C2C33"
            BorderThickness="1"
            Margin="16"
            ClipToBounds="True">
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="Transparent" 
                    Height="40" 
                    Padding="16,0">
                <TextBlock Text="Pick a Color"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#F0F0F0"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="16,8,16,8" ColumnDefinitions="Auto,*">
                <!-- Color Wheel -->
                <Border Grid.Column="0" Background="#25252A" CornerRadius="8" Padding="12" Margin="0,0,12,0">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Color Wheel" FontSize="11" FontWeight="SemiBold" Foreground="#F0F0F0"/>
                        <Canvas Name="ColorWheelCanvas" 
                                Width="240" 
                                Height="240"
                                Background="Transparent"
                                ClipToBounds="False"/>
                    </StackPanel>
                </Border>

                <!-- Right Panel -->
                <StackPanel Grid.Column="1" Spacing="12">
                    <!-- Brightness Slider -->
                    <Border Background="#25252A" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Brightness" FontSize="11" FontWeight="SemiBold" Foreground="#F0F0F0"/>
                            <Grid ColumnDefinitions="*,45">
                                <Slider Name="BrightnessSlider" 
                                        Grid.Column="0"
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="100"
                                        TickFrequency="1"
                                        Margin="0,0,8,0"/>
                                <TextBlock Name="BrightnessValue" 
                                           Grid.Column="1"
                                           Text="100%" 
                                           FontSize="10" 
                                           Foreground="#F0F0F0" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Color Preview and Hex -->
                    <Border Background="#25252A" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border Grid.Column="0"
                                        Name="ColorPreview" 
                                        Width="40" 
                                        Height="40" 
                                        CornerRadius="6"
                                        Background="#FFFFFF"
                                        BorderBrush="#3A3A42"
                                        BorderThickness="2"
                                        Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="Hex Value" FontSize="10" FontWeight="SemiBold" Foreground="#9A9AA8"/>
                                    <TextBox Name="HexInput" 
                                             Watermark="#FFFFFF"
                                             Background="#2F2F36"
                                             Foreground="#F0F0F0"
                                             BorderBrush="#3A3A42"
                                             BorderThickness="1"
                                             CornerRadius="6"
                                             Padding="8,6"
                                             FontSize="11"
                                             FontFamily="Consolas"
                                             FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="#1F1F24" Padding="16,12" BorderBrush="#2C2C33" BorderThickness="0,1,0,0">
                <Grid ColumnDefinitions="*,*">
                    <Button Name="CancelButton" Grid.Column="0"
                            Content="Cancel"
                            Background="#2F2F36" 
                            Foreground="#D0D0D6"
                            Padding="12,8" 
                            CornerRadius="7"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="0,0,4,0"
                            FontSize="12"
                            FontWeight="Medium"
                            Cursor="Hand"/>
                    <Button Name="SelectButton" Grid.Column="1"
                            Content="Select Color"
                            Background="#6C63FF" 
                            Foreground="White"
                            Padding="12,8" 
                            CornerRadius="7"
                            BorderThickness="0" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="4,0,0,0"
                            FontSize="12"
                            Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
